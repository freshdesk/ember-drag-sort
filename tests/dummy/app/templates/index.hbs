<div class="list-groups">
  <div class="list-group-wrapper">
    <h2>Occlusion Rendering</h2>

    <p>
      Sort lists, drag between lists. Won't let you drag items from/to other groups.
      <br>
      <i class="info">Highlight in <b>BLUE</b> border indicates occlusion render is enabled</i>
    </p>

    <section class="list-group">
      <article class="list">
        <h4>List without occlusion render</h4>

        {{#drag-sort-list
          items         = items15
          handle        = '.handle'
          class         = "height--400"
          dragEndAction = (action 'dragEnd')
          as |item|
        }}
          <div class="the-item">
            <span class="handle" draggable="true">â˜°</span>
            {{item.name}}
          </div>
        {{/drag-sort-list}}
      </article>

      <article class="list">
        <h4>List with Occlusion Rendering </h4>
          {{#drag-sort-list
            items             = items15
            dragEndAction     = (action 'dragEnd')
            lazyRenderEnabled = true
            class             = "height--400"
            as |item|
          }}
            <div class="the-item">
              {{item.name}}
            </div>
          {{/drag-sort-list}}
      </article>

      <article class="list occlusion">
        <h4>List with Occlusion Rendering (Threshold)</h4>

        <div class="action">
          <div class="pull-left">
            <label for="threshold">
              Adjust Threshold:
            </label>
            {{input name="threshold" type="number" value=(mut itemsThreshold) class="input padding--8"}}
          </div>
          <div class="pull-right">
            <button name="button" class="padding--8" {{action 'appendItems'}}>Add 5 Items</button>
            <button name="button" class="padding--8" {{action 'removeItems'}}>Remove 5 Items</button>
          </div>
          <div>
            <label for="autoscroll">
              Enable Auto Scroll:
            </label>
            {{input type="checkbox" checked=autoScroll}} 
          </div>
        </div>

        <p class="info">Occlusion will be activated when number of items exceed the above threshold value</p>

        {{#drag-sort-list
          items               = items16
          dragEndAction       = (action 'dragEnd')
          lazyRenderEnabled   = true
          autoScroll          = autoScroll
          itemsThreshold      = itemsThreshold
          estimateHeight      = 35
          class               = "height--400"
          as |item|
        }}
          <div class="the-item">
            {{item.name}}
          </div>
        {{/drag-sort-list}}
      </article>
    </section>
  </div>
</div>
